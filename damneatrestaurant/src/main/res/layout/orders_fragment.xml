<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:background="@color/colorBackground"
    android:padding="8dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/orders_recyclerview"
        app:layout_constraintEnd_toEndOf="@+id/orders_recyclerview"
        app:layout_constraintStart_toStartOf="@+id/orders_recyclerview"
        app:layout_constraintTop_toTopOf="@+id/orders_recyclerview"
        app:srcCompat="@drawable/ic_email" />

    <android.support.v7.widget.RecyclerView
    android:id="@+id/orders_recyclerview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" >

    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>